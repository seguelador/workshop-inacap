<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Pins de: <%= @user.try(:email) %> </h1>

  <table>
    <thead>
      <tr>
        <th>Photo</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
    	<% unless @pins.nil? %>
    		<% @pins.each do |pin| %>
    		  <tr>
    		    <td><img src="<%= pin.photo %>" alt="Foto del pin" width="200"></td>
    		    <td><%= pin.description %></td>
    		    <td><%= link_to 'Show', pin %></td>
    		    <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
    		    <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    		  </tr>
    		<% end %>
    	<% end %>      
    </tbody>
  </table>

  <br>

  <%= link_to 'New Pin', new_pin_path %>
</div>